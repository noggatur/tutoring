#!/bin/bash
function process_script_request {
  if [[ $# -eq 0 ]]; then
    show_help
  else
    case $1 in
      help) show_help;;
      logs) show_logs;;
      deploy) deploy_app;;
      deploy:test) git push -f heroku-test master;;
    esac
  fi
}

function show_help {
  echo "What to do?"
  echo "logs  deploy'"
}

function show_logs {
  heroku logs --tail --app online-tutoring
}

function deploy_app {
  git co production
  git merge master
  git co master
}

process_script_request $1